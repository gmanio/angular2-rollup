{
  "name": "angular2-rollup",
  "version": "0.0.1",
  "description": "liteweight angular2 app build",
  "scripts": {
    "clean": "rm -rf dist",
    "serve": "http-server . -p 5557",
    "build": "tsc -p tsconfig.json",
    "rollup": "rollup -c rollup.config.js",
    "es5": "tsc --target es5 --allowJs dist/bundle.es2015.js --out dist/bundle.js",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js",
    "build_prod": "npm run rollup && npm run es5 && npm run minify"
  },
  "author": "GmanPark",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^2.4.1",
    "@angular/compiler": "^2.4.1",
    "@angular/core": "^2.4.1",
    "@angular/platform-browser": "^2.4.1",
    "@angular/platform-browser-dynamic": "^2.4.1",
    "reflect-metadata": "^0.1.9",
    "rxjs": "^5.0.2",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "ngc": "^1.0.0",
    "rollup": "^0.38.0",
    "rollup-plugin-commonjs": "^6.0.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^1.0.1",
    "typescript": "^2.1.4",
    "uglify-js": "^2.7.5"
  }
}
